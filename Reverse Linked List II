// LeetCode-style C solution for 92. Reverse Linked List II
#include <stdlib.h>

// Definition for singly-linked list (LeetCode standard).
struct ListNode {
    int val;
    struct ListNode *next;
};

struct ListNode* reverseBetween(struct ListNode* head, int left, int right){
    if (!head || left == right) return head;
    // dummy to handle edge where left == 1
    struct ListNode dummy;
    dummy.next = head;
    struct ListNode *prev = &dummy;

    // move prev to node just before left
    for (int i = 1; i < left; ++i) prev = prev->next;

    struct ListNode *curr = prev->next; // first node in the sublist to reverse
    // reverse the sublist using standard iterative approach
    for (int i = 0; i < right - left; ++i) {
        struct ListNode *temp = curr->next;
        // remove temp and insert it after prev
        curr->next = temp->next;
        temp->next = prev->next;
        prev->next = temp;
    }
    return dummy.next;
}
